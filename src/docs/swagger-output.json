{
  "swagger": "2.0",
  "info": {
    "title": "Portfolio",
    "description": "Event Management",
    "contact": {
      "name": "API Support",
      "url": "localhost:3000",
      "email": "abulfaiz428@gmail.com"
    },
    "author": {
      "name": "Abul Faiz",
      "email": "abulfaiz.doodleblue@gmail.com"
    },
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": "['http','https']",
  "securityDefinitions": {
    "bearerAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "Bearer Token",
      "scheme": "bearer",
      "bearerFormat": "JWT"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/signUp": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "SignUp API",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "user or admin can signUp here",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Abul Faiz"
                },
                "email": {
                  "type": "string",
                  "example": "abulfaiz428@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "Login@123"
                },
                "role": {
                  "type": "string",
                  "example": "ADMIN"
                },
                "favoriteGenres": {
                  "type": "array",
                  "example": [
                    "Action",
                    "Sci-Fi"
                  ],
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Login API",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "User or Admin can login here",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "jay@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "Login@123"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/requestPassword": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Password request API via Email",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "abulfaiz428@gmail.com"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/resetPassword": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Reset password API",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "User or Admin can reset password here",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string",
                  "example": "any"
                },
                "newPassword": {
                  "type": "string",
                  "example": "Login@123#"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}